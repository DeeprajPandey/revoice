{
  "id": "invoice.json#",
  "description": "Invoice Schema for Revoice",
  "type": "object",
  "required": ["id", "date", "issuer", "invoicee", "items"],
  "properties": {
    "id": {
      "title": "ID",
      "description": "Unique Invoice ID",
      "type": "string"
    },
    "date": {
      "title": "Date",
      "description": "Date of Invoice",
      "type": "string",
      "format": "date"
    },
    "due": {
      "title": "Due Date",
      "description": "Due Date",
      "type": "string",
      "format": "date"
    },
    "issuer": {
      "type": "object",
      "required": ["name", "address", "contact"],
      "properties": {
        "name": {
          "type": "string"
        },
        "logo": {
          "type": "string",
          "format": "uri"
        },
        "address": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 6
        },
        "contact": {
          "type": "object",
          "required": ["tel", "email"],
          "properties": {
            "tel": {
              "type": "string"
            },
            "fax": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "website": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      }
    },
    "invoicee": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 6
        },
        "contact": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "tel": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            }
          }
        }
      }
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "$ref": "item.json#"
      }
    },
    "comments": {
      "type": "string"
    }
  }
}
